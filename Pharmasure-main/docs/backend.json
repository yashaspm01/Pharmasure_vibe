
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "age": {
          "type": "number",
          "description": "The user's age."
        },
        "gender": {
          "type": "string",
          "description": "The user's gender."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        },
        "medicalId": {
          "type": "string",
          "description": "The user's medical identifier."
        },
        "allergies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of user's allergies."
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of user's pre-existing conditions."
        }
      },
      "required": [
        "name",
        "email"
      ]
    },
    "Medication": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Medication",
      "description": "Represents a medication with its details, schedule, and tracking information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "barcode": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Completed",
            "Expired"
          ]
        },
        "scanDetails": {
          "type": "object",
          "properties": {
            "scannedOn": {
              "type": "string",
              "format": "date-time"
            },
            "manufacturer": {
              "type": "string"
            },
            "batchNumber": {
              "type": "string"
            },
            "mfgDate": {
              "type": "string",
              "format": "date-time"
            },
            "expiryDate": {
              "type": "string",
              "format": "date-time"
            },
            "source": {
              "type": "string"
            }
          }
        },
        "prescription": {
          "type": "object",
          "properties": {
            "prescriberId": {
              "type": "string"
            },
            "prescribedOn": {
              "type": "string",
              "format": "date-time"
            },
            "doctorNote": {
              "type": "string"
            }
          }
        },
        "schedule": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": [
                "daily",
                "every_n_days",
                "specific_dates",
                "custom_gaps"
              ]
            },
            "startDate": {
              "type": "string",
              "format": "date-time"
            },
            "endDate": {
              "type": [
                "string",
                "null"
              ],
              "format": "date-time"
            },
            "timesOfDay": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
              }
            },
            "everyNDays": {
              "type": [
                "number",
                "null"
              ]
            },
            "specificDates": {
              "type": [
                "array",
                "null"
              ],
              "items": {
                "type": "string",
                "format": "date-time"
              }
            },
            "customGaps": {
              "type": [
                "array",
                "null"
              ],
              "items": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "string",
                    "pattern": "^\\\\d{4}-\\\\d{2}-\\\\d{2}$"
                  },
                  "action": {
                    "type": "string",
                    "enum": [
                      "take",
                      "skip"
                    ]
                  },
                  "note": {
                    "type": "string"
                  }
                },
                "required": ["date", "action"]
              }
            },
            "doctorPresetId": {
              "type": "string"
            }
          }
        },
        "calendarCache": {
          "type": "object",
          "properties": {
            "occurrences": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "string",
                    "pattern": "^\\\\d{4}-\\\\d{2}-\\\\d{2}$"
                  },
                  "time": {
                    "type": "string",
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "scheduled",
                      "ticked",
                      "skipped",
                      "missed",
                      "completed"
                    ]
                  },
                  "reminderId": {
                    "type": "string"
                  },
                  "daysFromStart": {
                    "type": "number"
                  },
                  "note": {
                    "type": "string"
                  },
                  "tickedAt": {
                    "type": "string",
                    "format": "date-time"
                  }
                },
                "required": ["date", "time", "status", "daysFromStart"]
              }
            }
          }
        },
        "reminderActivity": {
          "type": "object",
          "properties": {
            "totalRemindersSent": {
              "type": "number"
            },
            "reminderTimestamps": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "date-time"
              }
            },
            "lastTicked": {
              "type": "string",
              "format": "date-time"
            },
            "nextReminder": {
              "type": "string",
              "format": "date-time"
            },
            "reminderStatus": {
              "type": "boolean"
            }
          }
        },
        "stockTracking": {
          "type": "object",
          "properties": {
            "totalCount": {
              "type": "number"
            },
            "countLeft": {
              "type": "number"
            },
            "predictedFinishDate": {
              "type": "string",
              "pattern": "^\\\\d{4}-\\\\d{2}-\\\\d{2}$"
            },
            "lowStockAlert": {
              "type": "boolean"
            }
          }
        },
        "expiryAndDisposal": {
          "type": "object",
          "properties": {
            "expiryDate": {
              "type": "string",
              "format": "date-time"
            },
            "daysRemaining": {
              "type": "number"
            },
            "disposalReminderSet": {
              "type": "boolean"
            },
            "disposalStatus": {
              "type": "string",
              "enum": [
                "Pending",
                "Completed"
              ]
            }
          }
        },
        "notes": {
          "type": "object",
          "properties": {
            "doctorNote": {
              "type": "string"
            },
            "userFeedback": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "name",
        "status",
        "schedule"
      ]
    },
    "Reminder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Reminder",
      "description": "Represents a single scheduled reminder for a medication.",
      "type": "object",
      "properties": {
        "medId": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "occurrenceDate": {
          "type": "string",
          "pattern": "^\\\\d{4}-\\\\d{2}-\\\\d{2}$"
        },
        "scheduledAt": {
          "type": "string",
          "format": "date-time"
        },
        "sendType": {
          "type": "string",
          "enum": [
            "push",
            "inapp",
            "sms"
          ]
        },
        "isLive": {
          "type": "boolean"
        },
        "sentAt": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "sent",
            "failed",
            "dismissed"
          ]
        },
        "daysFromStart": {
          "type": "number"
        },
        "meta": {
          "type": "object",
          "properties": {
            "snoozedCount": {
              "type": "number"
            },
            "snoozeUntil": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "required": [
        "medId",
        "userId",
        "occurrenceDate",
        "scheduledAt",
        "sendType",
        "isLive",
        "status",
        "daysFromStart"
      ]
    },
    "Scan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Scan",
      "description": "Represents a record of a medication scan.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "medId": {
          "type": "string"
        },
        "scannedOn": {
          "type": "string",
          "format": "date-time"
        },
        "manufacturer": {
          "type": "string"
        },
        "mfgDate": {
          "type": "string",
          "format": "date-time"
        },
        "expiryDate": {
          "type": "string",
          "format": "date-time"
        },
        "batchNumber": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "enum": [
            "camera",
            "upload"
          ]
        },
        "parsedText": {
          "type": "object"
        },
        "notes": {
          "type": "string"
        }
      },
      "required": [
        "userId",
        "scannedOn",
        "source"
      ]
    },
    "Report": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Report",
      "description": "Metadata for a generated health report.",
      "type": "object",
      "properties": {
        "reportUrl": {
          "type": "string",
          "format": "uri"
        },
        "generatedDate": {
          "type": "string",
          "format": "date-time"
        },
        "summaryPoints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "reportUrl",
        "generatedDate"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/medications/{medId}": {
      "schema": {
        "$ref": "#/entities/Medication"
      },
      "description": "Stores all data related to a specific medication."
    },
    "/reminders/{reminderId}": {
      "schema": {
        "$ref": "#/entities/Reminder"
      },
      "description": "Stores individual reminder jobs to be processed."
    },
    "/scans/{scanId}": {
      "schema": {
        "$ref": "#/entities/Scan"
      },
      "description": "Stores records of medication scans."
    },
    "/users/{userId}/reports/{reportId}": {
      "schema": {
        "$ref": "#/entities/Report"
      },
      "description": "Stores metadata for generated user health reports."
    }
  }
}

    